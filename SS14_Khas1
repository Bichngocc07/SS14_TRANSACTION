DROP DATABASE IF EXISTS social_network;
CREATE DATABASE social_network;
USE social_network;

-- Bảng users
CREATE TABLE users (
    user_id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50) NOT NULL,
    posts_count INT DEFAULT 0
);

CREATE TABLE posts (
    post_id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT NOT NULL,
    content TEXT NOT NULL,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (user_id) REFERENCES users(user_id)
);

-- 3. DỮ LIỆU MẪU
INSERT INTO users (username, posts_count) VALUES
('alice', 0),
('bob', 0);

-- 4. CASE 1: TRANSACTION THÀNH CÔNG (COMMIT)
START TRANSACTION;

-- Thêm bài viết mới
INSERT INTO posts (user_id, content)
VALUES (1, 'Bài viết đầu tiên của Alice');

-- Cập nhật số lượng bài viết
UPDATE users
SET posts_count = posts_count + 1
WHERE user_id = 1;

COMMIT;

-- Kiểm tra kết quả
SELECT 'CASE 1 - POSTS' AS info;
SELECT * FROM posts;

SELECT 'CASE 1 - USERS' AS info;
SELECT * FROM users;

-- 5. CASE 2: TRANSACTION THẤT BẠI (ROLLBACK)
START TRANSACTION;

-- Cố tình gây lỗi
INSERT INTO posts (user_id, content)
VALUES (999, 'Bài viết gây lỗi rollback');

-- Nếu có lỗi → rollback
ROLLBACK;

-- Kiểm tra lại dữ liệu
SELECT 'CASE 2 - POSTS (KHÔNG CÓ DÒNG RÁC)' AS info;
SELECT * FROM posts;

SELECT 'CASE 2 - USERS (KHÔNG BỊ ẢNH HƯỞNG)' AS info;
SELECT * FROM users;

